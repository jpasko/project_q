container_commands:
  01_syncdb:    
    command: "django-admin.py syncdb --noinput"
    leader_only: true
  02_createadmin:
    command: "scripts/createadmin.py"
    leader_only: true
  03_collectstatic:
    command: "django-admin.py collectstatic --noinput"
    leader_only: true
  04_migrate_accounts:    
    command: "django-admin.py migrate accounts 0001 --fake --noinput"
    leader_only: true
  05_migrate_portfolios:    
    command: "django-admin.py migrate portfolios 0001 --fake --noinput"
    leader_only: true

option_settings:
  - namespace: aws:elasticbeanstalk:container:python
    option_name: WSGIPath
    value: folio24/wsgi.py
  - option_name: DJANGO_SETTINGS_MODULE
    value: folio24.settings

packages:
  yum:
    libjpeg-devel: '6b'
